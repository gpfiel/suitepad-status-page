{{#if checkListPromise.isPending}}
  {{loading}}
{{else}}
  <table class="table">
    <thead>
      <tr>
        {{#table-th-sorter sortBy=(action "sortBy" "alias") key="alias" reverse=reverse currentSortingProperty=currentSortingProperty}}Service{{/table-th-sorter}}
        {{#table-th-sorter sortBy=(action "sortBy" "uptime") key="uptime" reverse=reverse currentSortingProperty=currentSortingProperty}}Rolling Uptime for 30 days{{/table-th-sorter}}
      </tr>
    </thead>
    <tbody>
      {{#each sortedList as |check|}}
        <tr>
          {{!-- <th scope="row">
            {{#if check.favicon_url}}
              <img class="icon-checker" src={{check.favicon_url}} alt={{check.alias}}>
            {{else}}
              Not available
            {{/if}}
          </th> --}}
          <th>
            <a target="_blank" rel="noopener" href="{{website}}/checks/5bhp?api-key={{apiKey}}">
              {{check.alias}}
            </a>
          </th>
          <th class="uptime-{{check.uptime_formatted.colour}}">{{check.uptime_formatted.value}}%</th>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}